/* pages/component/index.wxss */
.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}

.head{
    padding: 80rpx;
    line-height: 1;
}

.body{
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
}

.title{
    font-size: 52rpx;
}

.desc{
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #888888;
}

.widgets__item{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: #FFFFFF;
    overflow: hidden;
    border-radius: 4rpx;
    cursor: pointer;
}

.widget__arrow{
    position: absolute;
    top: 20rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}

 .widgets__info{
     display: flex;
     padding: 40rpx;
     align-items: center;
     flex-direction: row;
 }

.widgets__info-name{
    flex: 1;
}

.widgets__info-img{
    widows: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}

.widgets__info_show .widgets__info-img{
    transform: rotate(-90deg)
}