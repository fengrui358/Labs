<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvxXamarinFormsApp.Core.Views.MainPage"
             xmlns:res="clr-namespace:MvxXamarinFormsApp.Core.Resources;assembly=MvxXamarinFormsApp.Core">
  <StackLayout x:Name="TestContainer" HorizontalOptions="CenterAndExpand">
    <Label Text="{res:Translate MainPageTitle}"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           StyleId="MainPageTitleLbl" />
    <Button Text="动态加载" Command="{Binding DynamicLoadCommand}"></Button>
  </StackLayout>
</ContentPage>